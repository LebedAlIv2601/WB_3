<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdNoConstraintFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="36dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/no_constraint_example_left_side_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="789"
                android:textColor="@color/black"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/no_constraint_example_operator_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/green"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/no_constraint_example_right_side_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="56"
                android:textColor="@color/black"
                android:textSize="40sp" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/no_constraint_result_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:layout_marginEnd="36dp"
            android:text="845"
            android:textColor="@color/alpha_gray"
            android:textSize="32sp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="16dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="48dp">

                <ImageView
                    android:id="@+id/no_constraint_button_access_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@drawable/ic_baseline_access_time_24" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/no_constraint_button_straighten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_baseline_straighten_24" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/no_constraint_button_calculate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="32dp"
                    android:src="@drawable/ic_baseline_calculate_24" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/no_constraint_button_backspace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:layout_marginEnd="48dp"
                    android:src="@drawable/ic_baseline_backspace_24" />

            </FrameLayout>


        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/materialDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="16dp" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_c"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:background="@drawable/third_screen_circle"
                        android:gravity="center"
                        android:text="C"
                        android:textColor="@color/red"
                        android:textSize="40sp" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_brackets"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:paddingBottom="4dp"
                        android:text="( )"
                        android:textColor="@color/green" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_percent"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="%"
                        android:textColor="@color/green" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_divide"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="/"
                        android:textColor="@color/green" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_seven"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="7" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_eight"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="8" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_nine"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="9" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_mult"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="X"
                        android:textColor="@color/green" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_four"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="4" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_five"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="5" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_six"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="6" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_minus"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="-"
                        android:textColor="@color/green" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_one"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="1" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_two"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="2" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_three"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="3" />


                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_plus"
                        style="@style/calculator_button_style"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:layout_gravity="center"
                        android:text="+"
                        android:textColor="@color/green" />

                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_plus_minus"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:background="@drawable/third_screen_circle"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="+/-"
                        android:textColor="@color/black"
                        android:textSize="40sp" />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_null"
                        style="@style/calculator_button_style"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:text="0" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_comma"
                        style="@style/calculator_button_style"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:text="," />

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/no_constraint_button_equals"
                        style="@style/calculator_button_style"
                        android:layout_gravity="center"
                        android:layout_width="@dimen/calculator_button_size"
                        android:layout_height="@dimen/calculator_button_size"
                        android:backgroundTint="@color/green"
                        android:text="=" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>